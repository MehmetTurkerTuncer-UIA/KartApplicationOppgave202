@model FormModel

<link rel="stylesheet" href="https://unpkg.com/leaflet@1.7.1/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
<div id="map" style="height: 500px;"></div>

 <div class="container mt-5">
        <div class="row">
            <!-- Sol taraf: Form -->
            <div class="col-md-6">
                <h2>Bilgi Formu</h2>
                <form asp-action="SubmitForm" method="post">
                    <div class="mb-3">
                        <label for="Name" class="form-label">Ad</label>
                        <input type="text" asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="mb-3">
                        <label for="Email" class="form-label">E-posta</label>
                        <input type="email" asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    
                    <!-- Haritadan alınacak konum bilgileri -->
                    <div class="mb-3">
                        <label for="Latitude" class="form-label">Enlem (Latitude)</label>
                        <input type="text" asp-for="Latitude" class="form-control" readonly />
                    </div>
                    <div class="mb-3">
                        <label for="Longitude" class="form-label">Boylam (Longitude)</label>
                        <input type="text" asp-for="Longitude" class="form-control" readonly />
                    </div>

                    <button type="submit" class="btn btn-primary">Gönder</button>
                </form>
            </div>

            <!-- Sağ taraf: Harita -->
            <div class="col-md-6">
                <h2>Konum Seçimi</h2>
                <div id="map" style="height: 400px;"></div>
            </div>
        </div>
    </div>

    <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"></script>
    <script>
        // Haritayı Kristiansand, Norveç'e ayarla
        var map = L.map('map').setView([58.1467, 7.9956], 13);

        // Harita katmanını ekle
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            maxZoom: 19,
        }).addTo(map);

        // Kullanıcı haritaya tıkladığında, enlem ve boylamı formda göster
        map.on('click', function(e) {
            var latitude = e.latlng.lat;
            var longitude = e.latlng.lng;

            // Formdaki alanlara enlem ve boylamı aktar
            document.querySelector('input[name="Latitude"]').value = latitude;
            document.querySelector('input[name="Longitude"]').value = longitude;
        });
    </script>